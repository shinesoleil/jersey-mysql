<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.thoughtworks.api.mappers.OrderMapper">

    <select id="find" resultType="Hashmap">
        SELECT * FROM order_form WHERE user_id = #{userId}
    </select>

    <select id="findById" resultType="Hashmap">
        SELECT * FROM order_form WHERE id = #{orderId} AND user_id = #{userId}
    </select>

    <insert id="save">
        INSERT INTO order_form (name, address, phone, user_id)
        VALUES (#{name}, #{address}, #{phone}, #{userId})
    </insert>

    <select id="countOrders" resultType="int">
        SELECT COUNT(*) FROM product_order;
    </select>
</mapper>
